extends base.pug

block style
    <link rel="stylesheet" href="../static/css/repos.css">

block title
    <title>Choose repository</title>

block content
    <main>
        <h1>Choose repository</h1>

        <div class="card-list">
            <ul>
                each repo, index in repos
                    <div class="card-wrapper">
                        <button id="#{index}" class="card">#{repo}</button>
                        <div class="content">
                            <button id="#{index}" class="subcard">#{repo}</button>
                        </div>
                    </div>
            </ul>
        </div>
    </main>
    
block script
    <script src="../static/js/choose_repo.js"></script>