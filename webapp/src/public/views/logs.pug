    <main>
        <h1>Logs</h1>
        
        each file, index in testInfo.files
            <div class="file-div">
                <h2>Tested functions (#{file.path})</h2>
                <div class="func-wrapper">
                    each func in file.functions
                        if func.status !== 1
                            <div class="func-div status#{func.status}">
                                <h3>#{func.name}</h3>
                                each TC, index in func.testCases
                                    if TC.passed
                                        <div class="TC-div TC-passed">
                                            <p><span class="material-icons">check</span>#{TC.description}</p>
                                        </div>
                                    else 
                                        <div class="TC-div TC-failed">
                                            <p><span class="material-icons">clear</span>#{TC.description}</p>
                                        </div>
                            </div> 
                </div>
                <h2>Excluded functions (#{file.path})</h2>
                <div class="func-wrapper2">
                    each func in file.functions
                        if func.status === 1
                            <div class="func-div status#{func.status}">
                                <p>#{func.name}
                            </div> 
                </div>
            </div>
    </main>
