                    <li name="/repos" class="navlink" onclick="document.body.classList.add('loading-animation')"><a href="/repos">Choose repository</a></li> 
            </ul>
            <input id="toggleTheme" type="checkbox" data-on="<span class='material-icons'>light_mode</span>" data-off="<span class='material-icons'>dark_mode</span>" checked data-toggle="toggle" data-style="ios" onchange="toggleTheme()">
